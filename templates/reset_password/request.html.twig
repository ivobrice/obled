{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto">
            {% for flash_error in app.flashes('reset_password_error') %}
            <div class="mt-3 mb-3 text-center alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}
            <h1 class="mt-3 mb-3 text-center">Récuperer votre mot de passe</h1>
            <div class="mt-3 mb-3 text-center text-muted">
                <small>
                    Entrer votre addresse email et un lien vous sera envoyé par email
                    pour créer un nouveau mot de passe
                </small>
            </div>
            {{ form_start(requestForm) }}
                {{ form_row(requestForm.email) }}

                <button type="submit" class="btn btn-primary btn-lg btn-block">Envoyer</button>
            {{ form_end(requestForm) }}
        </div>
    </div>
{% endblock %}
