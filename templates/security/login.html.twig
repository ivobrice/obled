{% extends 'base.html.twig' %}

{% block title %}Connexion!{% endblock %}

{% block body %}
<form method="post">
    <div class="row">
        <div class="col-md-6 mx-auto">
            {% if error %}
                <div class="mt-3 alert alert-danger text-center" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <h1 class="h3 mb-3 mt-5 font-weight-normal text-center">Identifiez-vous</h1>
            <div class="form-group">
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            </div>
            <div class="form-group">
                <label for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticateUser') }}">

                <div class="mb-3 form-group d-flex justify-content-between">
                <div class="checkbox mb-3 form-check">
                    <input class="form-check-input" type="checkbox" name="_remember_me" id="remember_me">
                    <label class="form-check-label" for="remember_me">
                        Se souvenir de moi
                    </label>
                </div>
                <div>Mot de passe oublié ?
                    {# <a href="{{ path('app_forgot_password_request') }}" class="text-decoration-none">Mot de passe oublié ?</a> #}
                </div>
            </div>

            <button class="btn btn-lg btn-primary btn-block" type="submit" formnovalidate>
                Connexion
            </button>
            
            <p class="mb-3 mt-3 font-weight-normal text-center text-muted">
                <a href="{{ path('app_register') }}" class="text-decoration-none">Inscrivez-vous!</a>
            </p>
        </div>
    </div>
</form>
{% endblock %}
